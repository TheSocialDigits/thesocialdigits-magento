<config>
  <tabs>
    <TheSocialDigitsConfig translate="label" module="recommendations">
      <label>The Social Digits</label>
      <sort_order>9999</sort_order>
    </TheSocialDigitsConfig>
  </tabs>
  <sections>
    <recommendations_options translate="label" module="recommendations">
      <label>The Social Digits</label>
      <tab>advanced</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1000</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <settings translate="label">
          <label>Recommendations configuration</label>
          <frontend_type>text</frontend_type>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <expanded>1</expanded>
          <fields>
            <api_key>
              <label>API Key</label>
              <comment>The API provided by The Social Digits</comment>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_key>
            <language>
              <label>Language</label>
              <comment>The language specification of products etc. that
              will be present in the daily feed to The Social Digits.</comment>
              <frontend_type>select</frontend_type>
              <source_model>recommendations/languages</source_model>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </language>
            <template>
              <label>Template</label>
              <comment>The template that will be used for each item
              occurence. The input will be rendered as html. Magic
              values are inserted in curly brackets. e.g. '{name}' -
              commonly used values are {name} {price} {product_url}
              {thumbnail_url}.
              </comment>
              <frontend_type>textarea</frontend_type>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </template>
            <ga_tracking>
              <label>Google Analytics tracking category</label>
              <comment>Event category name for Google Analytics
              tracking. Leave empty to disable</comment>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </ga_tracking>
          </fields>
        </settings>
        <related translate="label">
          <label>Related block configuration</label>
          <frontend_type>text</frontend_type>
          <sort_order>200</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <expanded>1</expanded>
          <fields>
            <active translate="label comment">
              <label>Activate</label>
              <comment>Enable/disable the block on the frontend.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>0</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
            </active>
            <api_header translate="label comment">
              <label>API settings</label>
              <comment>Block specific API settings</comment>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </api_header>
            <limit translate="label comment">
              <label>Limit</label>
              <comment>The number of items that will be loaded from the API</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </limit>
<!--            <exclude_cart translate="label comment">
              <label>Exclude cart contents</label>
              <comment>Ask the API to exclude cart contents from the results.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>3</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </exclude_cart> -->
            <filter translate="label comment">
              <label>Filter</label>
              <comment><![CDATA[Enter a filter query to add to each API call. The filter
              must be on the form described
              <a
              href="http://developers.thesocialdigits.com/docs/api/result-filtering"
              target="_blank">here</a>]]></comment>
              <frontend_type>text</frontend_type>
              <sort_order>4</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </filter>
            <frontend_header translate="label comment">
              <label>Frontend settings</label>
              <comment>Configure how the block will be presented in the shop</comment>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </frontend_header>
            <visible translate="label comment">
              <label>Visible</label>
              <comment>The number of items visible in the carousel at a time. Be
              careful not to break the layout.</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>6</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </visible>
            <step translate="label comment">
              <label>Step</label>
              <comment>The number of items to scroll when transitioning. Enter 0
              to use the same number as visible.</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>7</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </step>
            <navigation translate="label comment">
              <label>Navigation</label>
              <comment>Enable/disable navigation buttons.</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <validate></validate>
              <sort_order>8</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </navigation>
            <transition_speed translate="label comment">
               <label>Transition speed</label>
              <comment>The time (in milliseconds) the animimation scrolls when
              transitioning</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>9</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </transition_speed>
            <template translate="label comment">
              <label>Item template</label>
              <comment>The html template used to render each item. The input will be
              rendered as html. Magic values are inserted in curly brackets.
              e.g. '{name}' - commonly used values are {name} {price}
              {product_url} {thumbnail_url}.</comment>
              <frontend_type>textarea</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </template>
            <width translate="label comment">
              <label>Item width</label>
              <comment>The width (in pixels) of each item presented</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </width> 
            <height translate="label comment">
              <label>Item height</label>
              <comment>The height (in pixels) of each item presented</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </height>
            <margin translate="label comment">
              <label>Item margin</label>
              <comment>The margin (in pixels) of each item presented</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>13</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </margin>
            <auto translate="label comment">
              <label>Automatic transition</label>
              <comment>Automatically transition items after a given interval</comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_enabledisable</source_model>
              <sort_order>14</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
              </depends>
            </auto>
            <auto_interval translate="label comment">
              <label>Interval</label>
              <comment>The interval (in milliseconds) between automatic transitions</comment>
              <frontend_type>text</frontend_type>
              <validate>validate-ajax validate-not-negative-number</validate>
              <sort_order>15</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
                <auto>1</auto>
              </depends>
            </auto_interval>
            <!--<auto_direction translate="label comment">
              <label>Direction</label>
              <comment>The direction of the automatic transition</comment>
              <frontend_type>select</frontend_type>
              <source_model>recommendations/system_config_source_dropdown_values</source_model>
              <validate></validate>
              <sort_order>16</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store> 
              <depends>
                <active>1</active>
                <auto>1</auto>
              </depends>
            </auto_direction> -->
          </fields>
        </related>
      </groups>
    </recommendations_options>
  </sections>
</config>
