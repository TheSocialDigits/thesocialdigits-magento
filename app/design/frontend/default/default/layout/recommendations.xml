<?xml version="1.0" ?>
<layout version="0.1.0">
  <default>
    <reference name="right">
      <block type="recommendations/recommendations" name="recommendations"
      template="recommendations/sidebar.phtml" >
        <action method="setElementId">
          <id>tsd-related</id>
        </action>
        <action method="setApiArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
        <action method="setCarouselArgument">
          <argument>visible</argument>
          <value>1</value>
        </action>
        <action method="setCarouselArgument">
          <argument>orientation</argument>
          <value>vertical</value>
        </action>
        <action method="setCarouselArgument">
          <argument>width</argument>
          <value>190</value>
        </action>
        <action method="setCarouselArgument">
          <argument>height</argument>
          <value>150</value>
        </action>
      </block>
    </reference>
  </default>
  <catalog_product_view>
    <reference name="product.info">
      <block type="recommendations/recommendations" name="upsell_products"
      template="recommendations/upsell.phtml">
        <action method="setElementId">
          <id>tsd-upsell</id>
        </action>
        <action method="setApiArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setCarouselArgument">
          <argument>width</argument>
          <value>130</value>
        </action>
        <action method="setCarouselArgument">
          <argument>height</argument>
          <value>120</value>
        </action>
        <action method="setAction">
          <action>alternative</action>
        </action>
      </block>
    </reference>
  </catalog_product_view>
  <checkout_cart_added>
    <reference name="root">
      <action
      method="setTemplate"><template>page/2columns-right.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="recommendations/checkout_cart_added" name="add_to_cart"
      template="recommendations/add_to_cart.phtml"></block>
    </reference>
  </checkout_cart_added>
  <checkout_cart_index>
    <reference name="checkout.cart">
      <block type="recommendations/recommendations" name="crosssell"
      template="recommendations/crosssell.phtml">
        <action method="setElementId">
          <id>tsd-crosssell</id>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
        <action method="setCarouselArgument">
          <argument>orientation</argument>
          <value>vertical</value>
        </action>
        <action method="setCarouselArgument">
          <argument>width</argument>
          <value>250</value>
        </action>
      </block>
    </reference>
  </checkout_cart_index>
  <checkout_onepage_success>
    <reference name="content">
      <block type="recommendations/checkout_onepage_success"
      name="recommendations.checkout.onepage.success"
      template="recommendations/onepage_success.phtml">
      </block>
    </reference>
  </checkout_onepage_success>
  <checkout_multishipping_success>
    <reference name="content">
      <block type="recommendations/checkout_multishipping_success"
      name="recommendations.checkout.multishipping.success"
      template="recommendations/multishipping_success.phtml" >
      </block>
    </reference>
  </checkout_multishipping_success>
</layout>
