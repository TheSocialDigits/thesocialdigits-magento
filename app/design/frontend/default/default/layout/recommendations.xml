<?xml version="1.0" ?>
<layout version="0.1.0">
  <default>
    <reference name="right">
      <block type="recommendations/recommendations" name="recommendations" template="recommendations/recommendations.phtml">
        <action method="setArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
      </block>
    </reference>
  </default>
  <catalog_product_view>
    <reference name="product.info">
      <block type="recommendations/recommendations" name="upsell_products"
      template="recommendations/upsell.phtml">
        <action method="setArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
      </block>
    </reference>
  </catalog_product_view>
  <checkout_cart_added>
    <remove name="left" />
    <remove name="right" />
    <reference name="root">
      <action
      method="setTemplate"><template>page/1column.phtml</template></action>
    </reference>
    <reference name="content">
      <block type="recommendations/checkout_cart_added" name="add_to_cart"
      template="recommendations/add_to_cart.phtml"></block>
    </reference>
  </checkout_cart_added>
  <checkout_cart_index>
    <reference name="checkout.cart">
      <block type="recommendations/recommendations" name="crosssell"
      template="recommendations/crosssell.phtml">
      </block>
    </reference>
  </checkout_cart_index>
  <checkout_onepage_success>
    <reference name="content">
      <block type="recommendations/checkout_onepage_success"
      name="recommendations.checkout.onepage.success"
      template="recommendations/onepage_success.phtml">
      </block>
    </reference>
  </checkout_onepage_success>
  <checkout_multishipping_success>
    <reference name="content">
      <block type="recommendations/checkout_multishipping_success"
      name="recommendations.checkout.multishipping.success"
      template="recommendations/multishipping_success.phtml" >
      </block>
    </reference>
  </checkout_multishipping_success>
</layout>
