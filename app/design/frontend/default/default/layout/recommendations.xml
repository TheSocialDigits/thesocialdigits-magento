<?xml version="1.0" ?>
<layout version="0.1.0">
  <default>
    <reference name="right">
      <block type="recommendations/recommendations" name="recommendations"
      template="recommendations/recommendations.phtml" >
        <action method="setArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
      </block>
    </reference>
  </default>
  <catalog_product_view>
    <reference name="product.info">
      <block type="recommendations/recommendations" name="upsell_products"
      template="recommendations/upsell.phtml">
        <action method="addJs">
          <path>jquery-1.7.2.min.js</path>
        </action>
        <action method="addJs">
          <path>thesocialdigits-js/json2.min.js</path>
        </action>
        <action method="addJs">
          <path>thesocialdigits-js/jquery.thesocialdigits.min.js</path>
        </action>
        <action method="addJs">
          <path>thesocialdigits-js/config.thesocialdigits.js</path>
        </action>
        <action method="setArgument">
          <argument>limit</argument>
          <value>3</value>
        </action>
        <action method="setAction">
          <action>related</action>
        </action>
      </block>
    </reference>
  </catalog_product_view>
  <checkout_onepage_success>
    <reference name="content">
      <block type="recommendations/checkout_onepage_success"
      name="recommendations.checkout.onepage.success"
      template="recommendations/onepage_success.phtml">
      </block>
    </reference>
  </checkout_onepage_success>
  <checkout_multishipping_success>
    <reference name="content">
      <block type="recommendations/checkout_multishipping_success"
      name="recommendations.checkout.multishipping.success"
      template="recommendations/multishipping_success.phtml" >
      </block>
    </reference>
  </checkout_multishipping_success>
</layout>
